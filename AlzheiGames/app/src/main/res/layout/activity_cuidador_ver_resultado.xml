<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cuidador_verResultado">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DCFBD7">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@android:dimen/app_icon_size"
                    android:text="Seleccione al Paciente"
                    android:textAlignment="center"
                    android:textColor="#FD510D"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerPPP"
                    android:layout_width="299dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="?attr/dialogPreferredPadding"
                    android:padding="?attr/dialogPreferredPadding"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.434"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView52"
                    app:layout_constraintVertical_bias="0.061" />

                <ImageView
                    android:layout_width="152dp"
                    android:layout_height="130dp"
                    android:layout_marginBottom="?attr/dialogPreferredPadding"
                    app:srcCompat="@drawable/icon_abuelo" />

                <TextView
                    android:id="@+id/txtNomPaciente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="?attr/dialogPreferredPadding"
                    android:text="Nombre Paciente"
                    android:textAlignment="center"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textPrueba"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PROGRESO"
                    android:textAlignment="center"
                    android:textColor="#FD510D "
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Puntos Obtenidos"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textPuntaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="- - - - -"
                    android:textAlignment="center"
                    android:textColor="#1849FD"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:text="DETALLES"
                    android:textAlignment="center"
                    android:textColor="#FD510D "
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/my_recycler_view"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ListView
                    android:id="@+id/listaResultados"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
